<!DOCTYPE html>
<html lang="en">
<head>
	<title>BatleShips</title>
	
	<link rel="stylesheet" type="text/css" href="/static/bootstrap2.css">
	<link rel="stylesheet" type="text/css" href="/static/fontello.css">
	<link rel="stylesheet" type="text/css" href="/static/animation.css">
	<link rel="stylesheet" type="text/css" href="/static/css.css">
</head>
<body>
	<main class="container">
		
		
		<div id = "loadingDisplay" class="row">
			<button id="tetst" class="btn btn-primary btn-block">Submit</button>
		</div>
		
		
		<div id = "namePrompt" class="row">
			<div  class="col-md-4 col-md-offset-4 text-center ">
				<label class="form-label" for="inptName">Username</label>
			</div>
			<br>
			<div  class="col-md-4 col-md-offset-4 centered">
				<input id="inptName" class="input-lg form-control" type="text"></input>
			</div>
			<div  class="col-md-12 text-center">
				<!-- EMPTY -->
				<br>
			</div>
			<div  class="col-md-4 col-md-offset-4 text-center">
				<button id="btnSubmitName" class="btn btn-primary btn-block">Submit</button>
				<label id="errorName">.</label>
			</div>
			
			</div>
		</div>
		
		<div id = "joinGame" class="row">
			<div  class="col-md-4 col-md-offset-4 text-center">
				<button id = "btnJoin" class="btn btn-primary btn-block">Join Game</button>
				<label id="errorJoin">.</label>
			</div>
		</div>

			<div id = "choosePlacement"  class="row">
				<div class="col-md-6 col-md-offset-3 text-center">
					<h3>Place your ships</h3>
				</div>
				
				<div id="chooseBoard" class="col-md-5 col-md-offset-1">

					<div class="board-row">
						<span class="board-cell-info" data-info="/"></span>
						<span class="board-cell-info" data-info="A"></span>
						<span class="board-cell-info" data-info="B"></span>
						<span class="board-cell-info" data-info="C"></span>
						<span class="board-cell-info" data-info="D"></span>
						<span class="board-cell-info" data-info="E"></span>
						<span class="board-cell-info" data-info="F"></span>
						<span class="board-cell-info" data-info="G"></span>
						<span class="board-cell-info" data-info="H"></span>
						<span class="board-cell-info" data-info="I"></span>
						<span class="board-cell-info" data-info="J"></span>

					</div>
					{% for i in range(0, 10) -%}
					<div class="board-row">
						<span class="board-cell-info" data-info="{{i+1}}"></span>
						{% for j in range(0, 10) -%}
							<span class="board-cell" id="cell-{{i}}{{j}}"></span>
						{%- endfor %}
					</div>
					{%- endfor %}
				</div>
				<div  class="col-md-6 container">
					<div class = "row">
						<div  class="col-md-12">
							<h6>Place Starting  Point and End Point</h6>
						</div>
					</div>
					{% for i in [{st:'A',name:'Carrier (5)'},{st:'B',name:'Submarine (4)'},{st:'C',name:'Carrier (5)'},{st:'D',name:'Carrier (5)'},{st:'E',name:'Patrol (2)'}] -%}
					<div class="row">
						<label>Place {{i.name}}</label>
						<br>
						<span class="col-md-1 boardInpt"><input id='{{i.st}}i' class="form-control inptXY" data-ship="{{i.st}}" placeholder="0"></span>
						<span class="col-md-1 boardInpt"><input id='{{i.st}}j' class="form-control inptXY" data-ship="{{i.st}}" placeholder="A"></span>
						<span class="col-md-2 boardBtn"><button id='btnRot{{i.st}}' class="btn btn-info btnRot" data-ship="{{i.st}}">Rotate</button></span>
						<span class="col-md-4 boardBtn"><button id='btnRotIndic{{i.st}}' class="btn btn-block btn-default" disabled>Currently Vertical</button></span>
						<span class="col-md-2 col-md-offset-1 boardBtn"><button class="btn btn-primary btn-block btnDrop" data-ship="{{i.st}}">Drop</button></span>
						<span class="col-md-12 boardBtn"><label id="errorPlaceShip{{i.st}}" class="label label-default">.</label></span>												
					</div>
					{%- endfor %}
				</div>
				<div  class="col-md-4 col-md-offset-4 text-center">
					<button id = "btnReady" class="btn btn-primary btn-block">Ready</button>
					<label id="errorReady">.</label>
				</div>
			</div>
		<div class="">
			<div id = "battleBoard">
				<div id="playerBoard"></div>
				<div id="opponentBoard"></div>
			</div>
		</div>
		
	</main>
	<script src="/static/jquery.js"></script>
	<script src="/static/jquery-migrate.js"></script>
	<script src="/static/socket.js"></script>
	<script src="/static/client.js"></script>
</body>
</html>
